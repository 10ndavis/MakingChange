<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signinview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/mainmenu_LogoImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/logolowres" />

    <TextView
        android:id="@+id/signin_txtusername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainmenu_LogoImageView"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="User Name"
        android:textColor="@color/colorPrimaryLight" />

    <EditText
        android:id="@+id/signin_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_txtusername"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimaryLight" />

    <TextView
        android:id="@+id/signin_txtpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_username"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Password"
        android:textColor="@color/colorPrimaryLight" />

    <EditText
        android:id="@+id/signin_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_txtpassword"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimaryLight" />
    <Button
        android:id="@+id/mainmenu_button_back"
        android:layout_width="160dp"
        android:layout_height="36dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mainmenu_button_ok"
        android:background="@color/colorPrimary"
        android:onClick="MenuMove"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Back"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/mainmenu_button_ok"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:onClick="MenuMove"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="OK"
        android:textColor="@android:color/white" />

</RelativeLayout>